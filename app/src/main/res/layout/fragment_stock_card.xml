<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_ticker_stock_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="GLBXF"
        android:textSize="@dimen/menu_size_big"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/margin_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_company_stock_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="GLOBEX MINING ENTERPRISES"
        android:textSize="@dimen/menu_size_little"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ticker_stock_card"
        android:layout_marginTop="@dimen/margin_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>